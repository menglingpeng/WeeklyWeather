<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.menglingpeng.weeklyweather">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.view.CitiesManageActivity" />
        <activity android:name=".mvp.view.WeatherDetailActivity" />
        <activity android:name=".mvp.view.UVIndexActivity" />
        <activity android:name=".mvp.view.SportIndexActivity" />
        <activity android:name=".mvp.view.ClothingIndexActivity" />
        <activity android:name=".mvp.view.CarWashIndexActivity" />
        <activity android:name=".mvp.view.CalendarActivity" />
        <activity android:name=".mvp.view.CarTailNumberLimitActivity" />
        <activity android:name=".mvp.view.ComfortIndexActivity" />
        <activity android:name=".mvp.view.TravelIndexActivity" />
        <activity android:name=".mvp.view.AirPollutionDiffusionIndexActivity" />
        <activity android:name=".mvp.view.FluIndexActivity" />
        <activity android:name=".mvp.view.ShortRainfallWarningActivity"></activity>
    </application>

</manifest>
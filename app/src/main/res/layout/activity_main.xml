<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.menglingpeng.weeklyweather.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/main_tb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin"></android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/main_weather_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_weather_rl_layout_height">

                <ImageView
                    android:id="@+id/background_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/current_temperature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/current_temperature_tv_text_size"/>

                <ImageView
                    android:id="@+id/temperature_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/current_temperature_tv"
                    android:layout_toRightOf="@+id/current_temperature_tv"/>

                <TextView
                    android:id="@+id/current_weather_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/current_temperature_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/current_weather_type_tv_layout_margin_top"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/current_weather_type_tv_text_size"/>

                <TextView
                    android:id="@+id/high_low_temperture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/current_weather_type_tv"
                    android:layout_alignLeft="@+id/current_temperature_tv"
                    android:layout_marginTop="@dimen/high_low_temperture_tv_layout_margin_top"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/current_wind_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/high_low_temperture_tv"
                    android:layout_toRightOf="@+id/high_low_temperture_tv"
                    android:layout_marginLeft="@dimen/current_wind_tv_layout_margin_left"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/current_humidity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/current_wind_tv"
                    android:layout_alignTop="@+id/current_wind_tv"
                    android:layout_marginLeft="@dimen/current_humidity_tv_layout_margin_left"
                    android:textColor="@android:color/white"/>

                <RelativeLayout
                    android:id="@+id/air_quality_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/high_low_temperture_tv"
                    android:layout_marginTop="@dimen/air_quality_rl_layout_margin_top"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/air_quality_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/air_quality_value_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/air_quality_tv"
                        android:layout_marginTop="@dimen/air_quality_value_tv_layout_margin_top"
                        android:textColor="@android:color/white"/>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

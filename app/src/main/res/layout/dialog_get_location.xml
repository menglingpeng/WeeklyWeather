<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/dialog_get_location_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_get_location_pb_layout_margin_top_bottom"
        android:layout_marginBottom="@dimen/dialog_get_location_pb_layout_margin_top_bottom"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/dialog_get_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_get_location_pb"
        android:layout_marginBottom="@dimen/dialog_get_location_tv_layout_margin_bottom"
        android:layout_centerHorizontal="true"
        android:text="@string/dialog_get_location_tv"
        android:textColor="@android:color/white"/>

</RelativeLayout>